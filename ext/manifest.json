{
    "manifest_version": 2,
    "name": "Melatonin",
    "version": "0.2",

    "description": "Melatonin for Chrome - keep your browser in tune with the sun!",

    "icons": {
        "48": "./thin48.png",
        "128": "./thin128.png"
    },

    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "./thin32.png"
    },

    "permissions": [ // "idle" for power state monitoring
        "<all_urls>",
        "geolocation",
        "alarms",
        "tabs",
        "storage"
    ],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content_script.js"],
        "css": ["overlay.css"],
        "match_about_blank": true, // no effect
        "run_at": "document_end"
    }],

    "background": {
        "persistent": false,
        "scripts": ["main.js"]
    },

    "offline_enabled": true
}
